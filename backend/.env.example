# Backend environment variables for Taqwa Center
# Copy this file to .env and set appropriate values

# Server
PORT=5000
NODE_ENV=development

# Frontend URL (used for redirecting after Stripe checkout)
FRONTEND_URL=http://localhost:3000

# Stripe
# Your Stripe secret key (starts with sk_...)
STRIPE_SECRET_KEY=

# Stripe subscription price IDs
# Monthly price ID (price_...)
PRICE_ID_MONTHLY=

# Semi-Annual (6 months) price ID (price_...)
PRICE_ID_SEMI_ANNUAL=

# Yearly price ID (price_...)
PRICE_ID_YEARLY=

# Stripe webhook signing secret (for webhook verification)
STRIPE_WEBHOOK_SECRET=
